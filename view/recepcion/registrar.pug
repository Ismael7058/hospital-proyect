  // Script para manejar visibilidad
  script.
    function mostrarSeccion(id) {
      const secciones = document.querySelectorAll('.seccion-form');
      secciones.forEach(seccion => {
        if (seccion.id === id) {
          seccion.classList.remove('d-none');
        } else {
          seccion.classList.add('d-none');
        }
      });
    }
  
